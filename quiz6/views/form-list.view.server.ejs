<h1>ejs</h1>

<% var formName = "";
var formId = "";
    if(typeof form != "undefined"){
        formName = form.name;
        formId = form._id;
    }
%>

<form action="/ejs/form" method="post">
    <input type="text" name="name" value="<%= formName%>"
           class="form-control" placeholder="search">

    <input type="hidden" name="_id" value="<%= formId%>"
           class="form-control" placeholder="search">


    <span>
        <button name="action" value="create" type="submit">add</button>
        <button name="action" value="update" type="submit">update</button>
    </span>
</form>


<div>
    <ul>
        <% for(var f in forms) {%>
        <li>
            <%= forms[f].name%>
            <span class="pull-right">
                <a href="/ejs/form/<%= forms[f]._id%>">
                    <span class="glyphicon glyphicon-cog"></span>
                </a>
                <a href="/ejs/form/<%= forms[f]._id%>/delete">
                    <span class="glyphicon glyphicon-remove"></span>
                </a>
            </span>
        </li>
        <% }%>
      </ul>
</div>